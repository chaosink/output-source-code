#! /bin/sh

if [ -z "$1" ]; then
	echo "No specified file!"
	exit 0
fi
echo -n "\
	int _i_;
	for(_i_ = 1; _i_ < argc; _i_++)
		if(!strcmp(argv[_i_], \"--output_source_code\") || !strcmp(argv[_i_], \"--osc\")) {
			FILE *in = fopen(argv[0], \"rb\");
			fseek(in, -4, SEEK_END);
			int size;
			fread(&size, 1, 4, in);
			int size_all;
			fseek(in, 0, SEEK_END);
			size_all = ftell(in);
			fseek(in, size, SEEK_SET);
			while(size++ != size_all - 4)
				putchar(fgetc(in));
			fclose(in);
			return 0;
		}
" > output_source_code_option.c
gcc $1 -o ${1%.*} -I.
rm output_source_code_option.c
append_source_code $1 ${1%.*}
